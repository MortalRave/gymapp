WindowManager:
    MainWindow:
    TrainingWindow:
    PlanEditorWindow:
    StopperWindow:
    TimerWindow:

<MainWindow>:
    name: "main"
    GridLayout:
        cols: 1
        padding: 50
        spacing: 20

        Label:
            text: "GymApp"
            font_size: 50

        Button:
            text: "Rozpocznij trening"
            on_release:
                app.root.current = "trainingwindow"
                root.manager.transition.direction = "left"

        Button:
            text: "Stw√≥rz plan"
            on_release:
                app.root.current = "editorwindow"
                root.manager.transition.direction = "left"

        Button:
            text: "Stoper"
            on_release:
                app.root.current = "stopperwindow"
                root.manager.transition.direction = "left"
        
        Button:
            text: "Timer"
            on_release:
                app.root.current = "timerwindow"
                root.manager.transition.direction = "left"

